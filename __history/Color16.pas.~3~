unit Color16;

interface
   uses Windows,Graphics, SysUtils, Classes;

 Type
   TColor16 = Record

    rgba: word;
    a: byte;
    r: byte;
    g: byte;
    b: byte;

    constructor Create(a: byte;r: byte;g: byte;b: byte);

  end;

implementation

 constructor TColor16.Create(a: byte;r: byte;g: byte;b: byte);
 begin
    self.rgba:=0;
    self.a :=a;
    self.r :=r;
    self.g :=g;
    self.b :=b;

    self.rgba:= self.b +  self.g + self.r;
 end;
end.
