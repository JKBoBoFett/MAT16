unit Color16;

interface
   uses Windows,Graphics, SysUtils, Classes;

 Type
   TColor16 = Record

    rgba: word;
    a: byte;
    r: byte;
    g: byte;
    b: byte;

    constructor Create(r: byte;g: byte;b: byte;a: byte;RedShift: byte;GreenShift: byte;BlueShift: byte;AlphaShift: byte);

  end;

implementation

 constructor TColor16.Create(r: byte;g: byte;b: byte;a: byte;RedShift: byte;GreenShift: byte;BlueShift: byte;AlphaShift: byte);
 begin
    self.rgba:=0;
    self.a :=a;
    self.r :=r;
    self.g :=g;
    self.b :=b;

    self.rgba:= self.r shl RedShift
             or self.g shl GreenShift
             or self.b shl BlueShift
             or self.a shl AlphaShift;

 end;
end.
