unit Color16;

interface
   uses Windows,Graphics, SysUtils, Classes;

 Type
   TColor16 = Record
    class var
    rgba: word;
    a: byte;
    r: byte;
    g: byte;
    b: byte;

    constructor Create(a: byte;r: byte;g: byte;b: byte);

  end;

implementation

 constructor TColor16.Create(a: byte;r: byte;g: byte;b: byte);
 begin
    Tcolor16.a :=a;
    Tcolor16.r :=r;
    Tcolor16.g :=g;
    Tcolor16.b :=b;

    Tcolor16.rgba:= Tcolor16.b +  Tcolor16.g + Tcolor16.r;
 end;
end.
